<div class="container-mod-products">

<h2>Real Time Products</h2>

     <section>
    <div id="container-products">
        {{this}}
    </div>
</section>

<section class="container-forms">


<div class="container-form">

<form action="" id="addProductToForm">
    <h2>Agregar Productos</h2>
    <label for="title">Title</label>
    <input type="text" name="title" id="title">

    <label for="description">Description</label>
    <input type="text" name="description" id="description">

    <label for="price">Price</label>
    <input type="number" name="price" id="price">

    <label for="thumbnail">Thumbnail</label>
    <input type="text" name="thumbnail" id="thumbnail">

    <label for="code">Code</label>
    <input type="number" name="code" id="code">

    <label for="stock">Stock</label>
    <input type="number" name="stock" id="stock">

    <label for="category">Category</label>
    <input type="text" name="category" id="category">

    <button type="submit">Add Product</button>

</form>
</div>

<div class="container-delete-products">
<form action="/realtimeproducts/{{this.id}}" id="delete-product-form">
    <h2>Eliminar Producto</h2>
    <input type="number" name="productId" value="{{this.id}}" id="deleteInput"> 
    <button type="submit" id="button-delete">Delete Product</button>
</form>
</div>

</section>
   
</div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="js/index.js" ></script>



    